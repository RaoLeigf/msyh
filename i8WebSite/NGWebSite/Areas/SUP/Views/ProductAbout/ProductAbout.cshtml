@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" http-equiv="X-UA-Compatible" content="IE=edge,IE=11,IE=10,IE=9" />
    <title>关于</title>
    <link href="@Url.Content("~/NG3Resource/css/weblogin.css")" rel="stylesheet" />
    <script type="text/javascript">
        var SN = '@ViewBag.SN';
        var AllUsers = '@ViewBag.AllUsers';
        var OAUsers = '@ViewBag.OAUsers';
        var UserName = '@ViewBag.UserName';

        var FullName = '@ViewBag.FullName';
        var msgList = FullName.split('#');

        window.onload = function () {
            var nameDiv = document.getElementById("fullName");
            nameDiv.innerText = msgList[0];
            var moduleDiv = document.getElementById("module")
            var moduleList = msgList[1].split(';');
            var html = '';
            for (var i = 0; i < moduleList.length; i++) {
                html += '<div class="about-module-list">' + moduleList[i] + '</div>';
                moduleDiv.innerHTML = html;
            }
            var snDiv = document.getElementById("sn")
            var companyDiv = document.getElementById("company")
            companyDiv.innerText = '合法使用单位：' + UserName;
            snDiv.innerHTML = '<div>序列号： ' + SN + '&nbsp;&nbsp;&nbsp;全模块用户数： ' + AllUsers + '&nbsp;&nbsp;&nbsp;OA用户数： ' + OAUsers + '</div>';
        }

        function closeWindow() {
            window.top.closeAboutWin();
        }

        function openSupportPage() {
            window.open("http://www.newgrand.cn");
        }

    </script>
</head>
<body>
    <div class="mainAbout">
        <div class="header-image">
            <img src="../../NG3Resource/pic/web/product_about.png" />
        </div>
        <div id="fullName" class="about-title">

        </div>
        <div class="about-title">
            版权所有(C) 2000-2018 杭州新中大科技股份有限公司。
        </div>
        <div id="company" class="legal-company">

        </div>
        <div id="sn" class="about-title">

        </div>
        <div id="module" class="about-module">

        </div>
        <div class="about-link">
            <a href="" target="_blank">查看最终用户许可协议</a>
        </div>
        <div class="about-link">
            新中大公司网址和邮箱：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;新中大在线服务网：
        </div>
        <div class="about-link">
            <a href="http://www.newgrand.cn" target="_blank">http://www.newgrand.cn</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="http://www.netcall.cc" target="_blank">http://www.netcall.cc</a>
        </div>
        <div class="about-link">
            <a href="mailto:newgrand@newgrand.cn" target="_blank">E-mail:newgrand@newgrand.cn</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </div>
        <div class="about-title">
            警告：
        </div>
        <div class="about-warning">
            <div class="about-warning-title">
                本计算机软件受著作权和国际公约的保护,未经授权擅自
            </div>
            <div class="about-warning-title">
                复制或传播本程序的部分或全部,可能受到严厉的民事及
            </div>
            <div class="about-warning-title">
                刑事制裁,并将在法律许可的范围内受到最大可能的起诉.
            </div>
        </div>
        <div class="about-button">
            <input class="about-confirm" type="button" value="确定" onclick="closeWindow()" />
            <input class="about-support" type="button" value="技术支持" onclick="openSupportPage()" />
        </div>
    </div>
</body>
</html>
